install eksctl
11  curl --silent --location "https://github.com/weaveworks/eksctl/releases/latest/download/eksctl_$(uname -s)_amd64.tar.gz" | tar xz -C /tmp
   12  sudo mv /tmp/eksctl /usr/local/bin
   13  eksctl version
   
   
   eksctl create cluster --name intellipaat-cluster
   
   eksctl get cluster
   
   Get the cluster name from the above command
   
   eksctl delete cluster --name <intellipaat-cluster>
